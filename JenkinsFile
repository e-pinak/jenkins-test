            }
        }
        stage('Build') {
            steps {
                sh '/var/lib/jenkins/workspace/PipelineTest@script/build.sh'
            }
        }
        stage('Clear') {
            steps {
                sh '/var/lib/jenkins/workspace/PipelineTest@script/clear.sh'
            }
        }
    }
} 